{
	"name": "Go Web File Server Backend",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {}
	},

	"customizations": {
		"vscode": {
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go",
				"sqltools.connections": [
					{
						"name": "devcontainer-postgres",
						"driver": "PostgreSQL",
						"server": "db",
						"port": 5432,
						"database": "db",
						"username": "user",
						"password": "password"
					}
				]
			},
			"extensions": [
				"golang.go",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg"
			]
		}
	},

	"forwardPorts": [8080, 5432],

	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y postgresql-client && go mod download",

	"remoteUser": "vscode"
}
